
<div class="container">
  <div class="row">
    <div class="col-xs-3"><%= render 'books/list', book: @book, user: @user %></div>
    <div class="col-xs-9">
      <% if flash[:notice] %>
        <p><%= flash[:notice] %></p>
      <% end %>

      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>

              <% if user_signed_in? %>
                <td><%= link_to 'Edit', edit_book_path(book.id), class:"btn btn-success" %></td>
                <td><%= link_to 'Destroy', book_path(book.id), method: :delete, class:"btn btn-danger", "data-confirm" => "Are you sure?"  %></td>
              <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>