
<h2>User info</h2>

  <%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
  <table cellpadding="25" width="200" height="100">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

<!-- user編集ボタン設置 -->
  <div class="row" style="margin-top:20px; margin-bottom: 20px">
    <div class="col-xs-12">
  <%= link_to edit_user_path(current_user.id) do %>
  <button type="button" class= "col-xs-10 btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
  <% end %>
    </div>
  </div>

<div class="new-form">
  <h2 class="form-title">New book</h2>
    <%= form_for(book) do |f| %>
      <%# ここからエラーメッセージ %>
      <% if book.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
            <ul>
              <% book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
      <% end %>
    <%# ここまでエラーメッセージ %>

      <div class="row" style="margin-bottom: 15px;">
        <%= f.label :title, "Title" %><br>
      <div class="col-xs-12">
        <%= f.text_field :title %>
      </div>
      </div>
      <div class="field row" style="margin-bottom: 10px">
        <%= f.label :body, "opinion" %><br>
      <div class="col-xs-12">
        <%= f.text_area :body %>
      </div>
      </div>

      <%= f.submit 'Create Book', class:"btn btn-primary" %>

    <% end %>
</div>

